<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.8.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.8.0 http://maven.apache.org/xsd/decoration-1.8.0.xsd">
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.11.1</version>
    </skin>

    <edit>${project.scm.url}</edit>

    <body>
        <links>
            <item name="Micronaut" href="https://micronaut.io"/>
        </links>

        <menu name="Overview">
            <item name="Introduction" href="index.html"/>
            <item name="Goals" href="plugin-info.html"/>
            <item name="Release History" href="release-history.html" />
        </menu>

        <menu name="Examples">
            <item name="Running in development mode" href="examples/run.html"/>
            <item name="Packaging" href="examples/package.html"/>
            <item name="Generating Dockerfiles" href="dockerfile-mojo.html"/>
            <item name="Deploying Docker images" href="examples/deploy.html"/>
            <item name="Using Micronaut AOT" href="examples/aot.html"/>
            <item name="Integration with Micronaut Test Resources" href="examples/test-resources.html"/>
            <item name="Generating OpenAPI clients or servers" href="examples/openapi.html"/>
        </menu>

        <menu ref="reports"/>
    </body>
    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>Micronaut Maven Plugin</name>
                <alt>Micronaut Logo</alt>
                <src>https://micronaut.io/wp-content/uploads/2021/10/favicon-16x16-1.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <sideBarEnabled>false</sideBarEnabled>
            <googleSearch/>
            <twitter>
                <user>micronautfw</user>
                <showUser>true</showUser>
                <showFollowers>true</showFollowers>
            </twitter>
            <gitHub>
                <projectId>micronaut-projects/micronaut-maven-plugin</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>
</project>
