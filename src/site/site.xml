<?xml version="1.0" encoding="UTF-8"?>
<project>
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.9</version>
    </skin>

    <edit>${project.scm.url}</edit>

    <body>
        <menu name="Overview">
            <item name="Introduction" href="index.html"/>
            <item name="Usage" href="usage.html"/>
            <item name="Goals" href="plugin-info.html"/>
            <item name="Release History" href="release-history.html" />
        </menu>

        <menu name="Examples">
            <item name="Java" href="https://github.com/micronaut-projects/micronaut-maven-plugin/blob/master/examples/java/pom.xml"/>
            <item name="Groovy" href="https://github.com/micronaut-projects/micronaut-maven-plugin/blob/master/examples/groovy/pom.xml"/>
            <item name="Kotlin" href="https://github.com/micronaut-projects/micronaut-maven-plugin/blob/master/examples/kotlin/pom.xml"/>
        </menu>

        <menu ref="reports"/>

        <links>
            <item name="Micronaut" href="https://micronaut.io"/>
        </links>
    </body>
    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <topBarIcon>
                <name>Micronaut Maven Plugin</name>
                <alt>Micronaut Logo</alt>
                <src>https://micronaut.io/images/favicon-16x16.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <sideBarEnabled>false</sideBarEnabled>
            <googleSearch/>
            <twitter>
                <user>micronautfw</user>
                <showUser>true</showUser>
                <showFollowers>true</showFollowers>
            </twitter>
        </fluidoSkin>
    </custom>
</project>